<h1><%= current_user.name %> のお気に入り一覧</h1>
<br>
<table class="container">
  <thead>
    <tr class="row">
      <th class="col-md-4">投稿者</th>
      <th class="col-md-4">画像</th>
      <th class="col-md-4">投稿内容</th>
    </tr>
  </thead>
  <tbody>
    <% @favorites.each do |favorite| %>
      <tr class="row">
        <td class="col-md-4"><%= favorite.blog.user.name %></td>
        <td class="col-md-4"><%= image_tag favorite.blog.image.url %></td>
        <td class="col-md-4"><%= favorite.blog.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>